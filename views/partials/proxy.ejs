<div id="proxy">
    PROXY BETA: Unblocker v1.0
    <input id="proxyInput" type="url" placeholder="https://example.com">
</div>

<script>
    const proxy = document.getElementById('proxyInput');
    proxy.addEventListener('keyup', (e) => {
        if (e.key === 'Enter') {
            openProxyWindow(e.target.value)
        }
    })
    const openProxyWindow =(url) => {
        let newURL = url;
        if (!newURL.includes('http')) {
            let arr = [newURL];
            arr.unshift('http://');
            newURL = arr.join('');
        }
        const extWindow = window.open(`/proxy/window/?url=${newURL}`, 'Loading...', 'top=50, left=50, height=600, width=800');
        extWindow.document.title = 'Starting Unblocker v1.0...';
    }
</script>

