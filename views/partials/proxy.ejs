<div id="proxy">
    PROXY BETA: Unblocker v2.0
    <input id="proxyInput" type="url" placeholder="https://example.com">
</div>

<script>
    const proxy = document.getElementById('proxyInput');
    proxy.addEventListener('keyup', (e) => {
        if (e.key === 'Enter') {
            openProxyWindow(e.target.value)
        }
    })
    const openProxyWindow = async (url) => {
        try {
            const response = await fetch('/proxy/checksite', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    url,
                    userID,
                }),
            });
            const resJSON = await response.json();
            if (resJSON.status === 'blocked') {
                myAlert('Unfortunatly, that website is currently unsupported/blocked!');
            } else if (resJSON.status === 'success') {
                const extWindow = window.open(resJSON.fullURL, 'Loading...', 'top=50, left=50, height=600, width=800');
                extWindow.document.title = 'Starting Unblocker v1.0...';    
            }
            
        } catch(err) {
            console.error(err);
        }
        
    }
</script>

